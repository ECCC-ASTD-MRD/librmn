ext=`find ./ -name $1 | sed 's/[^:]*\.//' | xargs`
if  [ "${ext}" == "inc" ] ; then
  name=`find ./ -name $1 | sed 's/\.inc//' | xargs`
  echo "COMPILING" ${name}.ftn90
  cp $1 scrap.ftn90
  s.compile -src scrap.ftn90
  \rm -f scrap.ftn90 scrap.f90 scrap.o
elif  [ "${ext}" == "hc" ] ; then
  name=`find ./ -name $1 | sed 's/\.hc//' | xargs`
  echo "COMPILING" ${name}.c
  cp $1 scrap.c
  s.compile -src scrap.c
  \rm -f scrap.c scrap.o
else
  echo "Error: file not found"
fi
